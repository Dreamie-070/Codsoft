import random

choices = ["rock", "paper", "scissors"]

def get_winner(user, computer):
    if user == computer:
        return "tie"
    elif (
        (user == "rock" and computer == "scissors") or
        (user == "paper" and computer == "rock") or
        (user == "scissors" and computer == "paper")
    ):
        return "user"
    else:
        return "computer"

def main():
    print("=== ğŸ® Rock-Paper-Scissors Game ===")
    user_score = 0
    computer_score = 0
    round_num = 1

    while True:
        print(f"\nğŸ” Round {round_num}")
        print("Choose: rock, paper, or scissors")
        user_choice = input("Your move: ").lower()

        if user_choice not in choices:
            print("âŒ Invalid choice. Please choose rock, paper, or scissors.")
            continue

        computer_choice = random.choice(choices)
        print(f"ğŸ§  Computer chose: {computer_choice}")
        print(f"ğŸ™‹ You chose: {user_choice}")

        result = get_winner(user_choice, computer_choice)

        if result == "tie":
            print("âš–ï¸ It's a tie!")
        elif result == "user":
            print("âœ… You win this round!")
            user_score += 1
        else:
            print("âŒ Computer wins this round!")
            computer_score += 1

        print(f"ğŸ“Š Score => You: {user_score} | Computer: {computer_score}")

        play_again = input("Play again? (y/n): ").lower()
        if play_again != "y":
            print("\nğŸ Final Score:")
            print(f"ğŸ§ You: {user_score}")
            print(f"ğŸ–¥ï¸ Computer: {computer_score}")
            print("Thanks for playing! âœŒï¸")
            break

        round_num += 1

if __name__ == "__main__":
    main()
